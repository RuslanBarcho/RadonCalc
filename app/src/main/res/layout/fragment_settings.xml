<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="radonsoft.radoncalc.fragments.settings"
    android:background="#e5e5e5">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_marginTop="10dp"
        android:elevation="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_vibration_black_24dp"
                android:paddingLeft="20dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/settings_haptic"
                android:id="@+id/textView11"
                android:paddingTop="5dp"
                android:textColor="#484848"
                android:textSize="18dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView3"
                android:layout_toEndOf="@+id/imageView3"
                android:paddingLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/settings_haptic_description"
                android:id="@+id/textView53"
                android:layout_below="@+id/textView11"
                android:layout_alignLeft="@+id/textView11"
                android:layout_alignStart="@+id/textView11"
                android:maxLines="2"
                android:paddingLeft="20dp"
                android:paddingBottom="8dp"
                android:textSize="14dp"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView54"
                android:background="#B2B2B2"
                android:layout_below="@+id/textView53"
                android:layout_alignLeft="@+id/textView53"
                android:layout_alignStart="@+id/textView53"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="3dp"
                android:layout_alignParentEnd="true" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/settingsHaptic"
                android:background="@drawable/ripple_settings"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentRight="false"
                android:clickable="true"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/textView53" />

            <Switch
                style="@style/SwitcherTheme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/switchVibration"
                android:textSize="20dp"
                android:paddingRight="10dp"
                android:layout_alignTop="@+id/imageView3"
                android:layout_alignParentRight="true"
                android:paddingTop="15dp"
                android:layout_alignParentEnd="true"
                android:theme="@style/SwitcherTheme" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/settings_angle"
                android:id="@+id/textView56"
                android:paddingTop="5dp"
                android:textColor="#484848"
                android:textSize="18dp"
                android:paddingLeft="17dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/settingsAngleStat"
                android:layout_toEndOf="@+id/settingsAngleStat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/settings_angle_description"
                android:id="@+id/textView58"
                android:layout_below="@+id/textView56"
                android:layout_alignLeft="@+id/textView56"
                android:layout_alignStart="@+id/textView56"
                android:maxLines="2"
                android:paddingLeft="17dp"
                android:paddingBottom="8dp"
                android:textSize="14dp"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView59"
                android:background="#B2B2B2"
                android:layout_below="@+id/textView58"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignLeft="@+id/textView58"
                android:layout_alignStart="@+id/textView58" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/settingsAngle"
                android:background="@drawable/ripple_settings"
                android:clickable="true"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="false"
                android:layout_alignWithParentIfMissing="false"
                android:layout_above="@+id/textView59" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="RAD"
                android:id="@+id/settingsAngleStat"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textSize="18dp"
                android:paddingLeft="12dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView2"
                android:src="@drawable/ic_info_outline_black_24dp"
                android:paddingLeft="20dp"
                android:paddingBottom="9dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/settings_about"
                android:id="@+id/textView9"
                android:paddingTop="5dp"
                android:textColor="#484848"
                android:textSize="18dp"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageView2"
                android:layout_toEndOf="@+id/imageView2"
                android:paddingLeft="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/settings_about_description"
                android:id="@+id/textView10"
                android:layout_below="@+id/textView9"
                android:layout_alignLeft="@+id/textView9"
                android:layout_alignStart="@+id/textView9"
                android:maxLines="2"
                android:paddingLeft="20dp"
                android:paddingBottom="8dp"
                android:textSize="14dp"
                android:textIsSelectable="false" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="1dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textView55"
                android:background="#B2B2B2"
                android:layout_below="@+id/textView10"
                android:layout_alignLeft="@+id/textView10"
                android:layout_alignStart="@+id/textView10"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="3dp"
                android:layout_marginBottom="10dp" />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:id="@+id/settingsAbout"
                android:background="@drawable/ripple_settings"
                android:layout_alignParentLeft="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/textView55"></FrameLayout>

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
